      // Function to generate bubbles
      function createBubble() {
        const container = document.getElementById("bubbles-container");
        const bubble = document.createElement("div");

        // Randomly choose between blue or yellow bubble
        const bubbleType =
          Math.random() > 0.5 ? "blue-bubble" : "yellow-bubble";
        bubble.classList.add("bubble", bubbleType);

        // Randomize the bubble size and horizontal starting position
        const size = Math.random() * 30 + 40; // Size between 40px and 70px
        bubble.style.width = `${size}px`;
        bubble.style.height = `${size}px`;

        // Calculate a random left position that ensures the bubble doesn't touch the sides
        const safeLeft = Math.random() * (window.innerWidth - size - 40) + 20; // Random position with buffer of 20px on each side
        bubble.style.left = `${safeLeft}px`;

        // Add the bubble to the container
        container.appendChild(bubble);

        // Remove the bubble after its animation ends (cleanup)
        setTimeout(() => {
          container.removeChild(bubble);
        }, 15000); // Bubble lifetime is 15 seconds (match animation duration)
      }

      // Generate bubbles every 2 seconds (adjust frequency here)
      setInterval(createBubble, 2000);
