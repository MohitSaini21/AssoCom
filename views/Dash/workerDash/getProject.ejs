    <style>
      /* Container for the grid of cards */
      .custom-card-grid-container {
        display: grid;
        grid-template-columns: repeat(
          auto-fill,
          minmax(300px, 1fr) /* Increased minimum width */
        );
        gap: 20px;
        padding: 20px;
        box-sizing: border-box;
      }

      /* Style for individual cards */
      .custom-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        height: auto; /* Let the height be determined by the content */
        display: flex;
        flex-direction: column;
      }

      /* Card Image Styling */
      .custom-card-image {
        width: 100%;
        height: 200px; /* Set a consistent height for the image */
        object-fit: cover;
      }

      /* Card Content */
      .custom-card-content {
        padding: 16px;
        flex-grow: 1; /* Allow the content to grow but not overflow */
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Ensure even distribution of space */
      }

      /* Card Title and Description Styling */
      .custom-card-title {
        font-size: 1.2em;
        font-weight: bold;
        margin: 0;
      }

      .custom-card-description {
        font-size: 1em;
        color: #555;
        margin-top: 8px;
        flex-grow: 1; /* Ensure description takes available space */
      }

      /* Hover effect for cards */
      .custom-card:hover {
        transform: translateY(-10px); /* Slight lift on hover */
      }

      /* Responsive design: Adjust layout for smaller screens */
      @media (max-width: 768px) {
        .custom-card-grid-container {
          grid-template-columns: repeat(
            auto-fill,
            minmax(250px, 1fr) /* Adjusted for medium screens */
          );
        }
      }

      @media (max-width: 480px) {
        .custom-card-grid-container {
          grid-template-columns: 1fr; /* One column layout on very small screens */
        }
      }
    </style>

    <style>
      /* Styling for College Image in Circular Shape */
      .college-image-container {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 10px;
      }

      .college-image {
        width: 40px; /* Set the size of the image */
        height: 40px; /* Set the size of the image */
        border-radius: 50%; /* Makes the image circular */
        object-fit: cover; /* Ensures the image fills the circle without distortion */
        border: 2px solid #ddd; /* Optional border around the image */
        margin-right: 12px; /* Adds some space between the image and text */
      }
    </style>
    <style>
      /* Container for the filter buttons */
      .filter-buttons {
        display: flex;
        justify-content: center;
        gap: 20px; /* Space between buttons */
        margin-bottom: 20px;
        padding: 10px;
        flex-wrap: wrap; /* Allow wrapping on smaller screens */
      }

      /* Individual filter button style */
      .filter-button {
        background-color: #f4f4f4; /* Light gray background */
        color: #333; /* Dark text */
        border: 1px solid #ddd; /* Border with subtle color */
        padding: 12px 24px; /* Padding for better click area */
        font-size: 1rem;
        text-align: center;
        border-radius: 5px; /* Rounded corners */
        cursor: pointer;
        transition: all 0.3s ease; /* Smooth transition on hover */
        min-width: 150px; /* Ensure a minimum width for the buttons */
        text-decoration: none; /* Remove default link styles */
        display: inline-block; /* Ensure buttons are inline */
      }

      /* Hover effect */
      .filter-button:hover {
        background-color: #e0e0e0; /* Slightly darker gray on hover */
        border-color: #bbb; /* Change border color on hover */
      }

      /* Active state when button is clicked */
      .filter-button:active {
        transform: scale(0.98); /* Slightly shrink the button on click */
      }

      /* Responsive Design: Stack buttons on smaller screens */
      @media (max-width: 768px) {
        .filter-buttons {
          justify-content: center; /* Align the buttons to the center */
        }

        .filter-button {
          width: 100%; /* Make buttons take full width on smaller screens */
          max-width: 300px; /* Limit the max width on very small screens */
          margin-bottom: 10px; /* Add space between buttons */
        }
      }

      @media (max-width: 480px) {
        .filter-button {
          width: 100%; /* Full width on mobile screens */
          padding: 12px 20px; /* Adjust padding for mobile */
        }
      }
    </style>
  </head>
  <body>
    <!-- Include the nav.ejs partial -->
    <%- include('../partials/nav') %>
    <main>
      <div class="container123">
        <h3>As a Worker:</h3>
        <p>
          Welcome! You can browse available projects, accept tasks, and track
          your work progress.
        </p>
        <p>
          You are on righ Trac you will b eprovided the projects within no time.
        </p>
        <!-- Filter Buttons -->
        <div class="filter-buttons">
          <a
            href="/worker/GetAllProjectPage"
            class="filter-button"
            id="all-projects-btn"
            >All Projects</a
          >
          <a
            href="/worker/GetProjectPage"
            class="filter-button"
            id="own-college-projects-btn"
            >Own College Projects</a
          >
        </div>
      </div>
      <div class="container">
        <!-- Responsive Container for Cards -->
        <div class="custom-card-grid-container">
          <!-- Cards -->
          <% if (projects) { %> <% projects.forEach(project => { %>
          <div id="project-card-<%= project._id %>" class="custom-card">
            <div class="custom-card-content">
              <!-- Inside the custom-card-content div -->
              <div class="college-image-container">
                <img
                  src="<%= project.postedBy.profile.collegeImage %>"
                  alt="<%= project.postedBy.profile.collegeImage %> College"
                  class="college-image"
                />
              </div>

              <h3 class="custom-card-title"><%= project.assignment_title %></h3>
              <p class="custom-card-description">
                <strong>Student Name:</strong> <%= project.student_name %><br />

                <strong>Course:</strong> <%= project.course_name %><br />
                <strong>Course Code:</strong> <%= project.course_code %><br />
                <strong>Semester:</strong> <%= project.semester %><br />
                <strong>Deadline:</strong> <%= new
                Date(project.deadline).toLocaleDateString() %><br />
                <strong>Budget:</strong> <%= project.budget %><br />
                <strong>Skills Required:</strong> <%= project.skills_required
                %><br />
                <strong>Preferred Language:</strong> <%=
                project.preferred_language %><br />
                <strong>NumberOF Bids:</strong> <%= project. bidsMade.length
                %><br />
                <strong>Payment Method:</strong> <%= project.payment_method
                %><br />
                <strong>Description:</strong> <%= project.description %><br />
              </p>

              <div
                id="timer-<%= project._id %>"
                style="color: red"
                class="expiration-timer"
              >
                <!-- Timer will be updated dynamically -->
              </div>

              <a
                style="text-decoration: none"
                href="/worker/MakeBid/<%=project._id %>/<%=project.expiresAt %>"
                class="view-details-link"
                >Make A Bid</a
              >
            </div>
          </div>
          <% }); %> <% } else { %>

          <h3>NoProjects . Keep Waiting</h3>

          <% } %>

          <!-- Add more cards here as needed -->
        </div>
      </div>
    </main>

    <div class="overlay" id="overlay"></div>
    <div class="error-popup" id="errorPopup">
      <p id="errorMessage">An error occurred. Please try again later.</p>
      <button onclick="closePopup()">Close</button>
    </div>

    <script src="/scripts/app.js"></script>
    <script src="/scripts/main.js"></script>
    <script>
              const projects = <%- JSON.stringify(projects) %>;

      console.log("Parsed projects:", projects);

      function updateTimer(expirationTime, projectId) {
        const timerElement = document.getElementById(`timer-${projectId}`);
        const currentTime = new Date().getTime();
        const remainingTime = expirationTime - currentTime;

        if (remainingTime <= 0) {

          timerElement.innerHTML = "This project has expired.";
        //   window.location.href="/worker/GetProjectPage"
          return;
        }

        const seconds = Math.floor((remainingTime / 1000) % 60);
        const minutes = Math.floor((remainingTime / 1000 / 60) % 60);
        const hours = Math.floor((remainingTime / (1000 * 60 * 60)) % 24);
        const days = Math.floor(remainingTime / (1000 * 60 * 60 * 24));

        timerElement.innerHTML = `Expires in ${days}d ${hours}h ${minutes}m ${seconds}s`;

        setTimeout(() => updateTimer(expirationTime, projectId), 1000);
      }

      projects.forEach(project => {
        const expirationTime = new Date(project.expiresAt).getTime();
        updateTimer(expirationTime, project._id);
      });
    </script>
    <script type="module" src="/scripts/foreground.js"></script>
  </body>
</html>
