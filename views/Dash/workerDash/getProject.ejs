<style>
/* Base Card Styling */
.unique-card {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  transition: all 0.3s ease; /* Transition for hover effects */
  margin-bottom: 20px; /* Ensure there's space between rows */
}

/* Card Hover Effect */
.unique-card:hover {
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); /* Stronger shadow to simulate "lift" */
  transform: scale(1.05); /* Slightly scale the card */
}

/* Card Content Styling */
.unique-card-content {
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.unique-card-title {
  font-size: 1em;
  font-weight: bold;
  margin: 0;
}

.unique-card-description {
  font-size: 0.9em;
  color: #555;
  margin-top: 8px;
}

/* Modal and Grid Container Styles (unchanged) */
.unique-card-grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px; /* Maintain consistent gap between cards */
  padding: 20px;
  box-sizing: border-box;
  margin-top: 20px; /* Optional: Adjust this for better spacing */
}

/* Mobile Specific Adjustments */
@media (max-width: 480px) {
  .unique-card-grid-container {
    gap: 15px;
    padding: 10px;
  }

  .unique-card {
    margin-bottom: 15px; /* Ensure cards have space between each other */
  }
}

/* Modal Styles */
.unique-modal {
  display: none; /* Hidden by default */
  position: fixed;
  z-index: 100;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.4); /* Semi-transparent black background */
  justify-content: center;
  align-items: center;
  text-align: center;
}

/* Modal Content */
.unique-modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  width: 80%;
  max-width: 800px;
  max-height: 80vh;
  overflow-y: auto;
  margin: 0 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.unique-modal-header {
  font-size: 1.5em;
  margin-bottom: 15px;
  font-weight: bold;
}

.unique-modal-body {
  font-size: 1.1em;
  color: #555;
  width: 100%;
}

.unique-modal-close {
  color: #f44336;
  font-size: 2em;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 200;
}

.unique-modal-close:hover,
.unique-modal-close:focus {
  color: #d32f2f;
  text-decoration: none;
}

/* Mobile Specific Styling */
@media (max-width: 480px) {
  .unique-card-grid-container {
    gap: 15px; /* Reduced gap on mobile */
    padding: 10px; /* Reduced padding for mobile */
  }

  .unique-card {
    margin-bottom: 15px; /* Adjust bottom margin to give space between cards */
  }

  .unique-card-button {
    font-size: 0.8em; /* Adjusting button font size on mobile */
  }
}

/* Desktop and Larger Screens */
@media (min-width: 768px) {
  .unique-card-grid-container {
    gap: 20px; /* Gap increases a bit on larger screens */
  }
}


</style>


  </head>

  <body>
    <!-- Include the nav.ejs partial -->
    <%- include('../partials/nav') %>
    <main>
      <div class="container123">
        <h3>As a Worker:</h3>
        <p>Welcome worker! You might have a look at client's number of Projects.</p>
        <p>
          You are on the right track! You will be provided the projects soon. and make sure you make a bid on proejct which you find suitable and you could and you know inside and out .
        </p>
      </div>

      <div class="container">
        <!-- Modal Structure -->
        <div class="unique-modal" id="projectModal">
          <div class="unique-modal-content">
            <span class="unique-modal-close" onclick="closeModal()"
              >&times;</span
            >
            <div class="unique-modal-header" id="modalHeader">Project Name</div>
            <div class="unique-modal-body" id="modalDescription"></div>
          </div>
        </div>

        <!-- Inside your project cards -->
        <div class="unique-card-grid-container">
          <% if (projects.length > 0) { %> <% projects.forEach(project => { %>
          <div id="project-card-<%= project._id %>" class="unique-card">
            <div class="unique-card-content">
              <h3 class="unique-card-title"><%= project.assignment_title %></h3>
              <p class="unique-card-description">
                <strong>Student Name:</strong> <%= project.student_name %><br />
                <strong>Course:</strong> <%= project.course_name %><br />
                <strong>Course Code:</strong> <%= project.course_code %><br />
                <strong>Semester:</strong> <%= project.semester %><br />
                <strong>Deadline:</strong> <%= new
                Date(project.deadline).toLocaleDateString() %><br />
                <strong>Budget:</strong> <%= project.budget %><br />
                <div
                  id="timer-<%= project._id %>"
                  style="color: red"
                  class="expiration-timer"
                >
                  <!-- Timer will be updated dynamically -->
                </div>
              </p>

              <!-- Button to open modal -->
              <button
                class="unique-card-button"
                data-project-id="<%= project._id %>"
                data-project-title="<%= project.assignment_title %>"
                data-description="<%= project.description %>"
                data-payment-method="<%= project.payment_method %>"
                data-bids="<%= project.bidsMade.length %>"
                data-skills-required="<%= project.skills_required %>"
                data-preferred-language="<%= project.preferred_language %>"
              >
                Look at Description
              </button>
              <a
                style="text-decoration: none"
                href="/worker/MakeBid/<%=project._id %>/<%=project.expiresAt %>"
                class="view-details-link"
                >Make A Bid</a
              >
      
              
            </div>
          </div>
          <% }); %> <% } else { %>
          <h3>You have not posted any project yet.</h3>
          <% } %>
        </div>
      </div>
    </main>

    <script>
      // Open Modal with the details of the selected project
      function openModal(
        projectTitle,
        description,
        paymentMethod,
        bidsMade,
        skillsRequired,
        preferredLanguage
      ) {
        const modal = document.getElementById("projectModal");
        const modalHeader = document.getElementById("modalHeader");
        const modalDescription = document.getElementById("modalDescription");

        modalHeader.textContent = projectTitle;
        modalDescription.innerHTML = `  
          <strong>Project Description:</strong><br />
          ${description}<br /><br />
          <strong>Payment Method:</strong> ${paymentMethod}<br />
          <strong>Number of Bids:</strong> ${bidsMade}<br />
          <strong>Skills Required:</strong> ${skillsRequired}<br />
          <strong>Preferred Language:</strong> ${preferredLanguage}<br />
        `;
        modal.style.display = "flex";
      }

      // Close the Modal
      function closeModal() {
        const modal = document.getElementById("projectModal");
        modal.style.display = "none";
      }

      // Close the modal when clicking outside of it
      window.onclick = function (event) {
        const modal = document.getElementById("projectModal");
        if (event.target === modal) {
          modal.style.display = "none";
        }
      };

      // Event listener for all "Look at Description" buttons
      document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".unique-card-button");

        buttons.forEach(function (button) {
          button.addEventListener("click", function () {
            const projectTitle = button.getAttribute("data-project-title");
            const description = button.getAttribute("data-description");
            const paymentMethod = button.getAttribute("data-payment-method");
            const bidsMade = button.getAttribute("data-bids");
            const skillsRequired = button.getAttribute("data-skills-required");
            const preferredLanguage = button.getAttribute(
              "data-preferred-language"
            );

            openModal(
              projectTitle,
              description,
              paymentMethod,
              bidsMade,
              skillsRequired,
              preferredLanguage
            );
          });
        });
      });
    </script>

    <script>
      const projects = <%- JSON.stringify(projects) %>;

      console.log("Parsed projects:", projects);

      function updateTimer(expirationTime, projectId) {
        const timerElement = document.getElementById(`timer-${projectId}`);
        const currentTime = new Date().getTime();
        const remainingTime = expirationTime - currentTime;

        if (remainingTime <= 0) {
          timerElement.innerHTML = "This project has expired.";
          return;
        }

        const seconds = Math.floor((remainingTime / 1000) % 60);
        const minutes = Math.floor((remainingTime / 1000 / 60) % 60);
        const hours = Math.floor((remainingTime / (1000 * 60 * 60)) % 24);
        const days = Math.floor(remainingTime / (1000 * 60 * 60 * 24));

        timerElement.innerHTML = `Expires in ${days}d ${hours}h ${minutes}m ${seconds}s`;

        setTimeout(() => updateTimer(expirationTime, projectId), 1000);
      }

      projects.forEach(project => {
        const expirationTime = new Date(project.expiresAt).getTime();
        updateTimer(expirationTime, project._id);
      });
    </script>

    <script src="/scripts/app.js"></script>
    <script src="/scripts/main.js"></script>
    <script type="module" src="/scripts/foreground.js"></script>
  </body>
</html>
