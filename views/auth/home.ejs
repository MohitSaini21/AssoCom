    <style>
      /* General container for the carousel */
      .carousel {
        width: 100%;
        height: auto;
        padding-top: 50px; /* To make space for the header */
      }

      /* Styling for the flip cards */
      .flip-card {
        background-color: transparent;
        width: 200px; /* Smaller card size */
        height: 250px; /* Height of the flip card */
        perspective: 1000px; /* Adds 3D effect */
        margin: 0 15px;
      }

      .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.6s;
        transform-style: preserve-3d;
      }

      /* Front of the flip card */
      .flip-card-front,
      .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
      }

      .flip-card-front img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
      }

      /* Back of the flip card */
      .flip-card-back {
        background-color: #0056b3;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.2rem;
        border-radius: 10px;
        transform: rotateY(180deg);
      }

      /* Flip effect trigger */
      .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
      }

      /* Carousel specific styling */
      .carousel-item {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
      }

      /* Carousel control styling */
      .carousel-control-prev-icon,
      .carousel-control-next-icon {
        background-color: #333; /* Color for navigation arrows */
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .flip-card {
          width: 150px; /* Reduce card size for smaller screens */
          height: 200px; /* Reduce height for smaller screens */
        }

        .carousel-item {
          display: flex;
          justify-content: space-around;
          flex-wrap: wrap;
        }

        .flip-card-back p {
          font-size: 1rem; /* Reduce font size for mobile screens */
        }
      }

      @media (max-width: 576px) {
        .flip-card {
          width: 130px; /* Further reduce size on very small screens */
          height: 180px;
        }
        .flip-card-back p {
          font-size: 0.9rem; /* Further reduce text size */
        }
      }

      .flip-card-back p {
        font-size: 1.2rem;
        font-weight: bold;
      }
    </style>
    <style>
      /* Bubble Style */
      .bubble {
        position: absolute;
        bottom: -150px; /* Start off-screen */
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: transparent;
        border: 3px solid;
        animation: bubbleAnimation 15s linear infinite;
        opacity: 0.9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .blue-bubble {
        border-color: #3498db;
      }

      .yellow-bubble {
        border-color: #f1c40f;
      }

      /* Keyframe animation for bubbles floating */
      @keyframes bubbleAnimation {
        0% {
          transform: translateX(0) translateY(0);
        }
        50% {
          transform: translateX(10px) translateY(-400px); /* Move upward and slightly to the side */
        }
        100% {
          transform: translateX(-10px) translateY(-800px); /* Continue moving upwards and further to the side */
        }
      }

      /* Responsiveness */
      @media (max-width: 1024px) {
        .bubble {
          display: none;
        }
      }

      @media (min-width: 1025px) {
        .bubble {
          display: block;
        }
      }
    </style>
