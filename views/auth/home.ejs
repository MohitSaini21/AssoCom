    <style>
      /* Set up the parent div for proper positioning */
      .parent-div {
        position: relative;
        display: flex;
        justify-content: space-between;
        overflow: hidden;
        width: 100%;
      }

      /* Child divs (worker and client) positioning */
      .child-div {
        position: absolute;
        top: 0;
        width: 50%; /* Each div takes up 50% of the width */
        opacity: 0;
        transform: translateX(100%);
        transition: transform 1s, opacity 1s;
      }

      /* Worker div animation */
      .worker-div {
        left: 0;
        transform: translateX(-100%); /* Start from the left */
      }

      /* Client div animation */
      .client-div {
        right: 0;
        transform: translateX(100%); /* Start from the right */
      }

      /* Apply the animation to reveal the divs */
      .parent-div:hover .worker-div {
        transform: translateX(0); /* Move to the center */
        opacity: 1; /* Fade in */
      }

      .parent-div:hover .client-div {
        transform: translateX(0); /* Move to the center */
        opacity: 1; /* Fade in */
      }

      /* Mobile responsiveness: Disable animation and stack divs */
      @media (max-width: 767px) {
        .parent-div {
          display: block; /* Stack the divs vertically */
        }

        .child-div {
          position: relative;
          width: 100%; /* Each div takes the full width on mobile */
          opacity: 1; /* Ensure the content is visible */
          transform: translateX(0); /* No sliding effect */
        }

        .worker-div {
          margin-bottom: 20px; /* Add space between worker and client on mobile */
        }
      }
    </style>
