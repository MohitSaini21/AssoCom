<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <title>Client Offers</title>
    <style>
      @import url("https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        list-style: none;
        text-decoration: none;
        font-family: "Josefin Sans", sans-serif;
      }

      body {
        background-color: #f3f5f9;
        color: #333;
      }

      .wrapper {
        display: flex;
        position: relative;
      }

      .wrapper .sidebar {
        width: 250px;
        height: 100%;
        background: #4b4276;
        padding: 30px 0px;
        position: fixed;
        transition: width 0.3s ease;
      }

      .wrapper .sidebar h2 {
        color: #fff;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 30px;
      }

      .wrapper .sidebar ul li {
        padding: 15px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      .wrapper .sidebar ul li a {
        color: #bdb8d7;
        display: block;
      }

      .wrapper .sidebar ul li a .fas {
        width: 25px;
      }

      .wrapper .sidebar ul li:hover {
        background-color: #594f8d;
      }

      .wrapper .sidebar ul li:hover a {
        color: #fff;
      }

      .wrapper .sidebar .social_media {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
      }

      .wrapper .sidebar .social_media a {
        display: block;
        width: 40px;
        background: #594f8d;
        height: 40px;
        line-height: 45px;
        text-align: center;
        margin: 0 5px;
        color: #bdb8d7;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
      }

      .wrapper .main_content {
        width: 100%;
        margin-left: 250px;
        transition: margin-left 0.3s ease;
      }

      .wrapper .main_content .header {
        padding: 20px;
        background: #fff;
        color: #717171;
        border-bottom: 1px solid #e0e4e8;
        font-size: 24px;
        font-weight: bold;
      }

      .wrapper .main_content .info {
        margin: 20px;
        color: #717171;
        line-height: 25px;
      }

      .project-card {
        background: #fff;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-left: 4px solid #594f8d;
      }

      .project-card h5 {
        font-size: 18px;
        font-weight: bold;
        color: #4b4276;
      }

      .bids {
        margin-top: 20px;
      }

      .bids h6 {
        font-size: 18px;
        font-weight: bold;
        color: #4b4276;
        margin-bottom: 10px;
      }

      .bids ul {
        list-style: none;
        padding: 0;
      }

      .bids ul li {
        background-color: #f9f9f9;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .bids ul li p {
        margin-bottom: 10px;
      }

      .bids ul li button {
        background-color: #4b4276;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        margin-right: 10px;
      }

      .bids ul li button:hover {
        background-color: #594f8d;
      }

      /* Responsive Design */
      @media screen and (max-width: 768px) {
        .wrapper .sidebar {
          width: 60px;
        }

        .wrapper .sidebar h2 {
          display: none;
        }

        .wrapper .sidebar ul li a {
          text-align: center;
        }

        .wrapper .sidebar ul li a .fas {
          margin-right: 0;
        }

        .wrapper .main_content {
          margin-left: 60px;
        }
      }

      @media screen and (max-width: 480px) {
        .wrapper .sidebar {
          width: 50px;
        }

        .wrapper .main_content {
          margin-left: 50px;
        }

        .wrapper .sidebar .social_media {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <%- include("partials/nav") %>
      <div class="main_content">
        <div class="header">Your Project Offers</div>
        <div class="info">
          <% if (offers.length > 0) { %>
          <% offers.forEach(function({ project, bids }) { %>
          <div class="project-card">
            <h5>Project: <%= project.assignment_title %></h5>
            <div class="bids">
              <h6>Bids:</h6>
              <% if (bids.length > 0) { %>
              <ul>
                <% bids.forEach(function(bid) { %>
                <li id="bid-<%= bid._id %>">
                  <p><strong>Worker:</strong> <%= bid.worker.fullName %></p>
                  <p><strong>Amount:</strong> $<%= bid.amount %></p>
                  <p>
                    <strong>Description:</strong> <%= bid.description || "No description provided" %>
                  </p>
                  <p>
                    <strong>Deadline:</strong> <%= new Date(bid.deadline).toLocaleDateString() %>
                  </p>
                  <% if (bid.status === "pending") { %>
                  <button class="accept-btn" data-bid-id="<%= bid._id %>">Accept Bid</button>
                  <button class="reject-btn" data-bid-id="<%= bid._id %>">Reject Bid</button>
                  <% } else { %>
                  <p><strong>Status:</strong> <%= bid.status %></p>
                  <% } %>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p>No bids have been made yet.</p>
              <% } %>
            </div>
          </div>
          <hr />
          <% }) %>
          <% } else { %>
          <p>You have no projects with bids yet.</p>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      function updateBidStatus(bidID, status) {
        fetch(`/client/bidStatus/${bidID}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ status }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              const bidElement = document.getElementById(`bid-${bidID}`);
              bidElement.querySelector(".accept-btn")?.remove();
              bidElement.querySelector(".reject-btn")?.remove();
              const statusParagraph = document.createElement("p");
              statusParagraph.innerHTML = `<strong>Status:</strong> ${status}`;
              bidElement.appendChild(statusParagraph);
              alert(`Offer ${status.charAt(0).toUpperCase() + status.slice(1)}!`);
            } else {
              alert("Error updating bid status");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
            alert("An error occurred while updating the bid status.");
          });
      }

      document.querySelectorAll(".accept-btn").forEach((button) => {
        button.addEventListener("click", function () {
          const bidID = button.dataset.bidId;
          updateBidStatus(bidID, "accepted");
        });
      });

      document.querySelectorAll(".reject-btn").forEach((button) => {
        button.addEventListener("click", function () {
          const bidID = button.dataset.bidId;
          updateBidStatus(bidID, "rejected");
        });
      });
    </script>
  </body>
</html>
